# ===========================================
# Production Environment Variables
# ===========================================
# Copy this file to .env.production on the server
# NEVER commit .env.production to git!
# ===========================================

# Database (used by both postgres container and arbtool)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_TO_NEW_SECURE_PASSWORD
POSTGRES_DB=arbtool
DATABASE_URL=postgresql://postgres:CHANGE_THIS_TO_NEW_SECURE_PASSWORD@postgres:5432/arbtool?schema=public

# Authentication - MUST CHANGE after security incident
# Generate new secret: openssl rand -base64 32
NEXTAUTH_SECRET=GENERATE_NEW_SECRET_HERE
NEXTAUTH_URL=https://arbtool.agcorpint.com

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
